{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020", "esnext"],
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
